<div class="d-flex justify-content-around">
    <div class="card" style="width: 25rem;">
        <div class="card-header">
            Add new post
        </div>
        <form>
            <div class="form-group">
                <label for="upload-file">Selet file to upload</label>
                <input type="file" class="form-control" id="upload-file">
            </div>
            <div class="form-group">
                <select class="form-select">
                    <option selected>Select the category</option>
                    {{#each categories as |category| }}
                    <option value="{{name}}">{{name}}</option>
                  </select>
            </div>
            <button type="button" class="btn btn-outline-primary" id="create-new-post">UPLOAD</button>
        </form>
    </div>
</div>

<div class="hidden custom-login-modal d-flex justify-content-around">
    <div class = "card custom-modal-body" style="width: 25rem; height: 7rem;">
        <div class="card-body alert-content"></div>
        <button type="button" class="btn btn-outline-secondary" id="dismiss-modal">CLOSE</button>
    </div>
</div>